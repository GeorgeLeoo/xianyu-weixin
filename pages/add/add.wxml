<view class='top-card'>
  <view class='title'>
    <input placeholder="标题品牌型号买家搜索内容"></input>
  </view>
  <view class='link'></view>
  <view class='describle'>
  <input placeholder='商品描述'></input>
  </view>

  <view class='img-span'>
    <image wx:for="{{img}}" src='{{item}}' bindtap='updateimg' class='img'></image>
    <image src='/img/add_image.png' bindtap='updataimg' class='img'></image>
  </view> 
</view>

<view class='buttom-card'>
   <view class='span'> 
   <input placeholder='价格' type='digit'></input>
   </view> 
  <view class='link'></view>

   <view class='span'> 
     <text>分类</text>
     <image src='/img/enter.png'></image>  
   </view>   
</view>

<view class='buttom'>
  <button bindtap='tijiao'>确认发布</button>
</view>